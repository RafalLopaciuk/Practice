@model LooksLikeVidly.ViewModels.MoviesListViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
@if (Model.Movie.Count == 0)
{
    <p> Movie list is empty.</p>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col" width="10%">Movie ID</th>
                <th scope="col">Title</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model.Movie)
            {
                <tr>
                    <th scope="row">@movie.Id</th>
                    <td>@movie.Name</td>
                </tr>
            }
        </tbody>
    </table> 
}